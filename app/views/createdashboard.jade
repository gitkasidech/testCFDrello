                        input#colorinprogress(type="color", name="color_inprogress", list="color", onchange="colorinprogressChange()")
                        datalist#colorpicker
                    br
                    //- script.
                    //-   src="createdashboard.js"
                    select#listsinprogress(multiple class="form-control", name="inprogress_id", size="1")
            
            //- select backlog card
            dl
              dt
                p Backlog Cards
                dd
                  ul.result
                    //- li
                    //-   p Todo
                    //-   a(href="#") x
                    div.select                     
                      a(href="#backlog").button.blue.open-backlog Select Lists
                      div.input-color-container
                        input#colorbacklog(type="color", name="color_backlog", list="color", onchange="colorbacklogChange()")
                        datalist#colorpicker
                    br
                    //- script.
                    //-   src="createdashboard.js"
                    select#listsbacklog(multiple class="form-control", name="backlog_id", size="1")
        
        div.btn
          button.button.green(type="submit", name="Save", value="Submit"  ) SAVE
          #cancel
          //- button.button.darkgray(type="submit", name="Cancel", value="Submit") CANCEL

      div.dialog.complete
        div.content
          p.title Completed Cards
          div.btn
