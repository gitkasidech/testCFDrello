            button.button.red Close

      div.dialog.inprogress
        div.content
          p.title In Progress Cards
          div.btn
            button#saveinprogress.button.green Save
            button.button.red Close
   
      div.dialog.backlog
        div.content
          p.title Backlog Card
          div.btn
            button#savebacklog.button.green Save
            button.button.red Close


